@model MvcTemplate.Web.ViewModels.Irregularity.AddIrregularityViewModel

@using (Html.BeginForm("Add", "Irregularity", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br/>
    @Html.EditorFor(m => m.CategoryId, new { ListItem = Model.Categories })
    @Html.EditorFor(m => m.Title)
    @Html.EditorFor(m => m.Description)
    @Html.TextBoxFor(m => m.Latitude)
    @Html.TextBoxFor(m => m.Longitude)
    <div class="row">
        <div class="col-md-5 col-md-offset-2">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}